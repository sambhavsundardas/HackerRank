#include <bits/stdc++.h>

using namespace std;

string ltrim(const string &);
string rtrim(const string &);
vector<string> split(const string &);

/*
 * Complete the 'gridlandMetro' function below.
 *
 * The function is expected to return an INTEGER.
 * The function accepts following parameters:
 *  1. INTEGER n
 *  2. INTEGER m
 *  3. INTEGER k
 *  4. 2D_INTEGER_ARRAY track
 */

int main(){
    int n,m,k;
    cin >> n >> m >> k;
    map<int, vector<pair<int,int>>> trackMap;
    for(int i=0; i<k; i++){
        int r,c1,c2;
        cin >> r >> c1 >> c2;
        trackMap[r].push_back({c1,c2});
    }
    long long totalCovered = 0;
    for (auto& row : trackMap){
        auto& intervals = row.second;
        if (intervals.empty()) continue;
        sort(intervals.begin(), intervals.end());
        int start = intervals[0].first;
        int end = intervals[0].second;
        for(int i=1; i<intervals.size(); i++){
            if(intervals[i].first <= end){
                end = max(end, intervals[i].second);
            }
            else{
                totalCovered += end - start + 1;
                start = intervals[i].first;
                end = intervals[i].second;
            }
        }
        totalCovered += end - start + 1;
    }
    long long totalCells = (long long)n*m;
    cout << totalCells - totalCovered << endl;
    return 0;

}
